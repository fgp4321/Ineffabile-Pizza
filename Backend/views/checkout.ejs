<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pago Seguro - Ineffabile Pizza</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fadeIn {
      animation: fadeIn 1s ease forwards;
    }

    /* Estilos para el formulario de pago */
    #payment-form {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    #card-element {
      margin-bottom: 20px;
      border: 1px solid #ced4da;
      border-radius: 5px;
      padding: 10px;
    }

    #card-errors {
      color: red;
      margin-bottom: 20px;
    }

    #payment-form button[type="submit"] {
      width: 100%;
    }
  </style>

</head>

<body class="bg-light">

  <!-- Contenido del formulario de pago -->
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="text-center mb-5">
          <h2 class="fw-bold">Pago Seguro</h2>
          <p class="lead">Introduce los detalles de tu tarjeta para completar la compra</p>
        </div>
        <form id="payment-form">
          <div id="card-element">
            <!-- Elemento de UI de tarjeta -->
          </div>
        
          <!-- Se mostrarán errores aquí -->
          <div id="card-errors" role="alert"></div>
        
          <button type="submit" class="btn btn-primary">Pagar</button>
          <div class="progress mt-3" style="display: none;">
            <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://js.stripe.com/v3/"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var stripe = Stripe('pk_test_51ONBDfL9CL45GjcPG6TFayw4YheZDGEWtQkBmKgFKpKgYfAXwwW4mPt3Ff5dxL95RVUHdt6vQ6tEe4g6SCvH7fYx00qSPysPu7');
    var elements = stripe.elements();
  
    // Personalizar el estilo de los elementos de Stripe
    var style = {
      base: {
        fontSize: '16px',
        color: '#32325d',
      }
    };
  
    // Crear un elemento de tarjeta y agregarlo al formulario
    var card = elements.create('card', { style: style });
    card.mount('#card-element');
  
    // Manejar errores en tiempo real del elemento de tarjeta
    card.addEventListener('change', function(event) {
      var displayError = document.getElementById('card-errors');
      if (event.error) {
        displayError.textContent = event.error.message;
      } else {
        displayError.textContent = '';
      }
    });
  
    // Manejar la presentación del formulario y la captura de la tarjeta
    var form = document.getElementById('payment-form');
    form.addEventListener('submit', function(event) {
      event.preventDefault();
      // Mostrar la barra de progreso
      var progressBar = document.querySelector('.progress');
      progressBar.style.display = 'block';
      // Simular un proceso de pago con una barra de progreso
      var progress = 0;
      var progressBarElement = document.querySelector('.progress-bar');
      var interval = setInterval(function() {
        progress += 1;
        progressBarElement.style.width = progress + '%';
        progressBarElement.setAttribute('aria-valuenow', progress);
        if (progress >= 100) {
          clearInterval(interval);
          stripe.createToken(card).then(function(result) {
            if (result.error) {
              // Informar al usuario sobre el error
              var errorElement = document.getElementById('card-errors');
              errorElement.textContent = result.error.message;
            } else {
              // Enviar el token de pago a tu servidor
              stripeTokenHandler(result.token);
            }
          });
        }
      }, 30);
    });
  
    function stripeTokenHandler(token) {
      // Ocultar la barra de progreso
      var progressBar = document.querySelector('.progress');
      progressBar.style.display = 'none';
      // Mostrar alerta de éxito con SweetAlert2
      Swal.fire({
        title: '¡Pago realizado!',
        text: 'Tu pago se ha realizado correctamente.',
        icon: 'success',
        confirmButtonColor: '#3085d6',
        confirmButtonText: 'Ver mis pedidos'
      }).then((result) => {
        // Redirigir a /pago-completado cuando se hace clic en el botón de confirmación
        if (result.isConfirmed) {
          window.location.href = '/mis-pedidos';
        }
      });
    }
  </script>
</body>
</html>