<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pago Seguro - Ineffabile Pizza</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/checkout.css">
  <link rel="stylesheet" href="/fontawesome/css/all.min.css">
</head>

<body class="bg-light">

  <!-- Contenido del formulario de pago -->
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="text-center mb-5">
          <h2 class="fw-bold">Pago Seguro</h2>
          <p class="lead">Introduce los detalles de tu tarjeta para completar la compra</p>
        </div>
        <form id="payment-form">
          <div id="card-element">
            <!-- Elemento de UI de tarjeta -->
          </div>
        
          <!-- Se mostrarán errores aquí -->
          <div id="card-errors" role="alert"></div>
        
          <button id="pay-button" type="submit" class="btn btn-primary">Pagar <%= totalPrice.toFixed(2) %> € <i class="fa-solid fa-lock"></i></button>
          <button id="loading-button" class="btn btn-primary d-none btn-cooldown" type="button" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <span class="visually-hidden">Loading...</span>
          </button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://js.stripe.com/v3/"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var stripe = Stripe('pk_test_51ONBDfL9CL45GjcPG6TFayw4YheZDGEWtQkBmKgFKpKgYfAXwwW4mPt3Ff5dxL95RVUHdt6vQ6tEe4g6SCvH7fYx00qSPysPu7');
    var elements = stripe.elements();
  
    // Personalizar el estilo de los elementos de Stripe
    var style = {
      base: {
        fontSize: '16px',
        color: '#32325d',
      }
    };
  
    // Crear un elemento de tarjeta y agregarlo al formulario
    var card = elements.create('card', { style: style });
    card.mount('#card-element');
  
    // Manejar errores en tiempo real del elemento de tarjeta
    card.addEventListener('change', function(event) {
      var displayError = document.getElementById('card-errors');
      if (event.error) {
        displayError.textContent = event.error.message;
      } else {
        displayError.textContent = '';
      }
    });
  
    // Manejar la presentación del formulario y la captura de la tarjeta
    var form = document.getElementById('payment-form');
    var payButton = document.getElementById('pay-button');
    var loadingButton = document.getElementById('loading-button');
    
    form.addEventListener('submit', function(event) {
      event.preventDefault();
      
      // Deshabilitar el botón de pagar y mostrar el spinner
      payButton.classList.add('d-none');
      loadingButton.classList.remove('d-none');
      
      stripe.createToken(card).then(function(result) {
        if (result.error) {
          // Informar al usuario sobre el error
          var errorElement = document.getElementById('card-errors');
          errorElement.textContent = result.error.message;
          
          // Mostrar nuevamente el botón de pagar después de un breve retraso
          setTimeout(function() {
            payButton.classList.remove('d-none');
            loadingButton.classList.add('d-none');
          }, 2000); // 2 segundos de retraso
        } else {
          // Enviar el token de pago a tu servidor
          stripeTokenHandler(result.token);
        }
      });
    });
  
    function stripeTokenHandler(token) {
      // Mostrar alerta de éxito con SweetAlert2 después de 2 segundos
      setTimeout(function() {
        Swal.fire({
          title: '¡Pago realizado!',
          text: 'Tu pago se ha realizado correctamente.',
          icon: 'success',
          confirmButtonColor: '#3085d6',
          confirmButtonText: 'Ver mis pedidos'
        }).then((result) => {
          // Redirigir a /pago-completado cuando se hace clic en el botón de confirmación
          if (result.isConfirmed) {
            window.location.href = '/mis-pedidos';
          }
        });
      }, 2000); // 2 segundos de retraso
    }
  </script>
</body>
</html>