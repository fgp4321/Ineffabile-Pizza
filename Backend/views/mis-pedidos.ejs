<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mis Pedidos - Ineffabile Pizza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <%- include('./partials/navbar.ejs') %>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="mb-4">Mis Pedidos</h1>
        <% if (pedidos.length > 0) { %>
            <% pedidos.forEach(pedido => { %>
                <div class="card mb-3">
                    <div class="card-header">
                        Pedido realizado el <%= pedido.fecha.toDateString() %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Total: <%= pedido.total %> â‚¬</h5>
                        <p class="card-text">Estado: <%= pedido.estadoPedido_status %></p>
                        <p>Productos:</p>
                        <ul>
                            <% pedido.productos_nombre.forEach(producto => { %>
                                <li><%= producto %></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                No tienes pedidos.
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.slim.min.js"></script>
</body>
</html>
