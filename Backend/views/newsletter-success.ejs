<!-- views/newsletter-success.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Suscripción Exitosa</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/fontawesome/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-light">

  <!-- Incluir el navbar -->
  <%- include('./partials/navbar.ejs') %>

  <!-- Contenido específico de la vista de éxito -->
  <div class="container mt-5">
    <h1 class="text-success">¡Bienvenido!</h1>
    <p class="lead">Próximamente le enviaremos un correo de confirmación.</p>
    <!-- Puedes agregar más contenido aquí según sea necesario -->
  </div>

  <!-- Incluir el footer -->
  <%- include('./partials/footer.ejs') %>

  <!-- Al final del cuerpo, antes de cerrar el body, incluir los scripts necesarios -->
  <script src="/fontawesome/js/all.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.4.slim.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>

  <script>
    // Script para mostrar la alerta de SweetAlert2 al cargar la página de éxito
    document.addEventListener('DOMContentLoaded', function () {
      // Mostrar la alerta de éxito
      Swal.fire({
        position: 'top-end', // Posición en la esquina superior derecha
        icon: 'success',
        title: '¡Enhorabuena!',
        text: 'Te has suscrito satisfactoriamente al newsletter.',
        showConfirmButton: false, // No mostrar el botón de confirmación
        timer: 2000 // Cerrar automáticamente después de 5 segundos
      });
    });
  </script>
</body>
</html>
