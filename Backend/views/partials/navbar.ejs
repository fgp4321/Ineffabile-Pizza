<script>
  $(document).ready(function() {
    // Manejar la solicitud de búsqueda al hacer clic en el botón de búsqueda
    $('#searchBtn').click(function(event) {
      event.preventDefault();
      var query = $('#searchInput').val();
  
      // Realizar la solicitud de búsqueda utilizando fetch
      fetch('/search-products', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ query: query })
      })
      .then(response => response.json())
      .then(data => {
        // Renderizar los resultados en la vista resultados.ejs
        window.location.href = '/resultados?query=' + query;
      })
      .catch(error => console.error('Error al buscar productos:', error));
    });
  
