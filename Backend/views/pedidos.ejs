<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todos los Pedidos - Ineffabile Pizza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container mt-5">
        <h1 class="mb-4">Todos los Pedidos</h1>
        <% if (pedidos.length > 0) { %>
            <% pedidos.forEach(pedido => { %>
                <div class="card mb-3">
                    <div class="card-header">
                        Pedido realizado el <%= pedido.fecha.toDateString() %>
                    </div>
                    <div class="card-header">
                        Cliente: <%= pedido.usuario_nombre %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Total: <%= pedido.total %> â‚¬</h5>
                        <p class="card-text">Estado: <%= pedido.estadoPedido_status %></p>
                        <p>Productos:</p>
                        <ul>
                            <% pedido.productos_nombre.forEach(producto => { %>
                                <li><%= producto %></li>
                            <% }) %>
                        </ul>
                        <!-- Botones para editar y formulario para desactivar pedidos -->
                        <a href="/pedidos/editar/<%= pedido._id %>" class="btn btn-primary">Editar</a>
                        <!-- Formulario para desactivar usando POST como PUT -->
                        <form action="/pedidos/desactivar/<%= pedido._id %>" method="POST" style="display: inline;">
                            <input type="hidden" name="_method" value="PUT">
                            <button type="submit" class="btn btn-danger">Desactivar</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                No hay pedidos.
            </div>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.slim.min.js"></script>
</body>
</html>